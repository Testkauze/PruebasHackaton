<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<nav class="be-red white large-padding">
			<ul class=" no-list row center-xs middle-xs">
				<li class="col-md">
					<h1 class="no-margin" id="logo"> <%= link_to "Blog JK", root_path %> </h1>
				 </li>
				<li class="col-md">
					<%= link_to "Inicio", articles_path %>
				</li>
				<li class="col-md">
					Diseno
				</li>
				<li class="col-md">
					Programacion
				</li>
				<li class="col-md">
					tecnologia
				 </li>
				 <% if user_signed_in? %>
				 <li class="col-md">
				 	<%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete %>
				 </li>
				 <%end%>
			</ul>
		</nav>
	</header>
	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
